# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tickets_db

# JWT Configuration
# CRITICAL: JWT_SECRET must match the secret used by acme-auth-service
# Both services must share the same secret for token validation to work
# Generate a strong secret (minimum 32 characters):
#   - openssl rand -base64 32
#   - node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-secret-key-change-this-in-production-must-match-acme-auth-service
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for Bull queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=tickets-attachments
S3_PRESIGNED_URL_EXPIRY=3600

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
